{
  "name": "@openmgr/agent",
  "version": "0.1.0",
  "description": "Lightweight AI coding agent for OpenMgr",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "openmgr-agent": "./dist/cli.js",
    "oa": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run copy-skills",
    "copy-skills": "cp -r src/skills/bundled dist/skills/",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "serve": "node dist/cli.js serve",
    "repl": "node dist/cli.js repl",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node dist/db/migrate.js",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.5",
    "@ai-sdk/openai": "^1.2.3",
    "@ai-sdk/xai": "^1.2.7",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@types/react": "^19.2.9",
    "@xenova/transformers": "^2.17.2",
    "ai": "^4.3.19",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "drizzle-orm": "^0.45.1",
    "eventemitter3": "^5.0.0",
    "glob": "^11.0.0",
    "hono": "^4.0.0",
    "ink": "^6.6.0",
    "ink-big-text": "^2.0.0",
    "ink-box": "^1.0.0",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "react": "^19.2.3",
    "yaml": "^2.8.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@hono/node-server": "^1.13.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.7",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
