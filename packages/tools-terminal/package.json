{
  "name": "@openmgr/agent-tools-terminal",
  "version": "0.1.0",
  "description": "Terminal and filesystem tools for @openmgr/agent (bash, read, write, edit, glob, grep, background tasks)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@openmgr/agent-core": "workspace:*",
    "glob": "^11.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@openmgr/agent-core": "workspace:*"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
