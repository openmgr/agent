{
  "name": "@openmgr/agent-cli",
  "version": "0.1.0",
  "description": "Command-line interface for OpenMgr Agent",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "openmgr-agent": "./dist/bin.js",
    "oa": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./bin": {
      "import": "./dist/bin.js"
    },
    "./dist/bin.js": {
      "import": "./dist/bin.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@openmgr/agent-core": "workspace:*",
    "@openmgr/agent-config-xdg": "workspace:*",
    "@openmgr/agent-skills-loader": "workspace:*",
    "@openmgr/agent-providers": "workspace:*",
    "@openmgr/agent-tools": "workspace:*",
    "@openmgr/agent-tools-terminal": "workspace:*",
    "@openmgr/agent-storage": "workspace:*",
    "@openmgr/agent-memory": "workspace:*",
    "@openmgr/agent-auth-anthropic": "workspace:*",
    "@openmgr/agent-skills-bundled": "workspace:*",
    "@openmgr/agent-lsp": "workspace:*",
    "@openmgr/agent-server": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.19.7",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
