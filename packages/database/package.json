{
  "name": "@openmgr/agent-database",
  "version": "0.1.0",
  "description": "SQLite database layer with Drizzle ORM for @openmgr/agent",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "drizzle"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:migrate": "tsx src/migrate.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "drizzle-orm": "^0.45.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.19.7",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.20.2",
    "typescript": "^5.8.3",
    "vitest": "^4.0.0"
  },
  "keywords": [
    "openmgr",
    "agent",
    "database",
    "sqlite",
    "drizzle"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openmgr/agent.git",
    "directory": "packages/database"
  }
}
